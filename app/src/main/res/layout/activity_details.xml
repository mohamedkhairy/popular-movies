<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a5airi.popularmovies.DetailsActivity"
    android:background="@color/colorAccent">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@color/colorAccent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:id="@+id/linear">

        <ImageView
            android:id="@+id/cover_imageView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_margin="2dp"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <ImageView
            android:id="@+id/intro_imageView"
            android:layout_width="240dp"
            android:layout_height="wrap_content"

            android:layout_margin="2dp"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

    </LinearLayout>

       <TextView
           android:id="@+id/title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/linear"
           android:background="@color/ccccc"
           android:padding="5dp"
           android:text="Title"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/title_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/title"
           android:padding="5dp"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/user_rating"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/title_view"
           android:background="@color/ccccc"
           android:padding="5dp"
           android:text="user rating"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/user_rating_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/user_rating"
           android:padding="5dp"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/release_date"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/user_rating_view"
           android:background="@color/ccccc"
           android:padding="5dp"
           android:text="release date"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/release_date_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/release_date"
           android:padding="5dp"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/summary"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/release_date_view"
           android:background="@color/ccccc"
           android:padding="5dp"
           android:text="Summary"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/sammary_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/summary"
           android:padding="5dp"
           android:textColor="@android:color/background_light"
           android:textSize="15sp" />


   </RelativeLayout>


</ScrollView>
